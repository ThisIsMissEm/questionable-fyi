{
  "lexicon": 1,
  "id": "fyi.questionable.richtext.facet",
  "defs": {
    "main": {
      "description": "Annotation of a sub-string within rich text.",
      "properties": {
        "features": {
          "type": "array",
          "items": {
            "type": "union",
            "refs": [
              "#link",
              "#mention",
              "#code",
              "#highlight",
              "#underline",
              "#strikethrough",
              "#bold",
              "#italic"
            ]
          }
        },
        "index": {
          "type": "ref",
          "ref": "#byteSlice"
        }
      },
      "required": ["index", "features"],
      "type": "object"
    },
    "byteSlice": {
      "type": "object",
      "description": "Specifies the sub-string range a facet feature applies to. Start index is inclusive, end index is exclusive. Indices are zero-indexed, counting bytes of the UTF-8 encoded text. NOTE: some languages, like Javascript, use UTF-16 or Unicode codepoints for string slice indexing; in these languages, convert to byte arrays before working with facets.",
      "required": ["byteStart", "byteEnd"],
      "properties": {
        "byteEnd": {
          "type": "integer",
          "minimum": 0
        },
        "byteStart": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "mention": {
      "type": "object",
      "description": "Facet feature for mentioning a did.",
      "required": ["did"],
      "properties": {
        "did": {
          "format": "did",
          "type": "string"
        }
      }
    },
    "bold": {
      "description": "Facet feature for bold text",
      "properties": {},
      "required": [],
      "type": "object"
    },
    "code": {
      "description": "Facet feature for inline code.",
      "properties": {},
      "required": [],
      "type": "object"
    },
    "highlight": {
      "description": "Facet feature for highlighted text.",
      "properties": {},
      "required": [],
      "type": "object"
    },
    "italic": {
      "description": "Facet feature for italic text",
      "properties": {},
      "required": [],
      "type": "object"
    },
    "strikethrough": {
      "description": "Facet feature for strikethrough markup",
      "properties": {},
      "required": [],
      "type": "object"
    },
    "underline": {
      "description": "Facet feature for underline markup",
      "properties": {},
      "required": [],
      "type": "object"
    },
    "link": {
      "type": "object",
      "description": "Facet feature for a URL. The text URL may have been simplified or truncated, but the facet reference should be a complete URL.",
      "required": ["uri"],
      "properties": {
        "uri": {
          "type": "string",
          "format": "uri"
        }
      }
    }
  }
}
