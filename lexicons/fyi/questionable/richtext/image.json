{
  "lexicon": 1,
  "id": "fyi.questionable.richtext.image",
  "defs": {
    "aspectRatio": {
      "type": "object",
      "required": ["width", "height"],
      "properties": {
        "height": {
          "type": "integer"
        },
        "width": {
          "type": "integer"
        }
      }
    },
    "main": {
      "type": "object",
      "required": ["image", "aspectRatio"],
      "properties": {
        "alt": {
          "type": "string",
          "description": "Alt text description of the image, for accessibility.",
          "maxGraphemes": 3000,
          "maxLength": 3000
        },
        "aspectRatio": {
          "type": "ref",
          "ref": "#aspectRatio"
        },
        "image": {
          "type": "blob",
          "accept": ["image/*"],
          "maxSize": 1000000
        }
      }
    }
  }
}
