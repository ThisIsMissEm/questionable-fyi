{
  "lexicon": 1,
  "id": "fyi.questionable.answer",
  "defs": {
    "main": {
      "description": "A proposed answer to a question",
      "key": "tid",
      "type": "record",
      "record": {
        "type": "object",
        "required": ["question", "content", "createdAt"],
        "properties": {
          "question": {
            "type": "ref",
            "ref": "com.atproto.repo.strongRef",
            "description": "Indicates the question to which this is a proposed answer to"
          },
          "createdAt": {
            "format": "datetime",
            "type": "string"
          },
          "content": {
            "type": "ref",
            "ref": "fyi.questionable.richtext.content"
          },
          "languages": {
            "type": "array",
            "maxLength": 3,
            "items": {
              "type": "string",
              "format": "language"
            }
          }
        }
      }
    }
  }
}
