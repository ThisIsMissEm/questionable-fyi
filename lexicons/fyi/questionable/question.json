{
  "lexicon": 1,
  "id": "fyi.questionable.question",
  "defs": {
    "main": {
      "description": "A question asked on questionable.fyi",
      "key": "tid",
      "type": "record",
      "record": {
        "type": "object",
        "required": ["summary", "content", "createdAt"],
        "properties": {
          "createdAt": {
            "format": "datetime",
            "type": "string"
          },
          "summary": {
            "description": "A short summary of the question",
            "maxGraphemes": 300,
            "maxLength": 3000,
            "minLength": 1,
            "type": "string"
          },
          "content": {
            "type": "ref",
            "ref": "fyi.questionable.richtext.content"
          },
          "languages": {
            "type": "array",
            "description": "Indicates human language of the primary text content.",
            "maxLength": 3,
            "items": {
              "type": "string",
              "format": "language"
            }
          },
          "context": {
            "type": "union",
            "closed": false,
            "refs": ["fyi.questionable.actor.profile"]
          }
        }
      }
    }
  }
}
