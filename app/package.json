{
  "name": "app",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "license": "AGPL-3.0-only",
  "scripts": {
    "start": "node bin/server.js",
    "changeset": "pnpm -w changeset",
    "prebuild": "pnpm lex:build",
    "build": "node ace build",
    "dev": "node ace serve --hmr --no-clear",
    "test": "node ace test",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "lex:build": "pnpm lex build --clear --indexFile --lexicons ../lexicons --out ./app/lexicons",
    "lex": "node_modules/.bin/lex",
    "db:migrate": "node ace migration:run"
  },
  "imports": {
    "#controllers/*": "./app/controllers/*.js",
    "#lexicons/*": "./app/lexicons/*.js",
    "#exceptions/*": "./app/exceptions/*.js",
    "#dtos/*": "./app/dtos/*.js",
    "#models/*": "./app/models/*.js",
    "#mails/*": "./app/mails/*.js",
    "#services/*": "./app/services/*.js",
    "#listeners/*": "./app/listeners/*.js",
    "#events/*": "./app/events/*.js",
    "#middleware/*": "./app/middleware/*.js",
    "#validators/*": "./app/validators/*.js",
    "#providers/*": "./providers/*.js",
    "#policies/*": "./app/policies/*.js",
    "#abilities/*": "./app/abilities/*.js",
    "#utils/*": "./app/utils/*.js",
    "#database/*": "./database/*.js",
    "#tests/*": "./tests/*.js",
    "#start/*": "./start/*.js",
    "#config/*": "./config/*.js"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/eslint-config": "^2.0.0",
    "@adonisjs/prettier-config": "^1.4.4",
    "@adonisjs/tsconfig": "^1.4.0",
    "@japa/assert": "^4.0.1",
    "@japa/plugin-adonisjs": "^4.0.0",
    "@japa/runner": "^4.2.0",
    "@swc/core": "1.11.24",
    "@types/luxon": "^3.7.1",
    "@types/node": "^22.15.18",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "eslint": "^9.26.0",
    "hot-hook": "^0.4.0",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.5.3",
    "ts-node-maintained": "^10.9.5",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.8.3",
    "vite": "^6.3.5"
  },
  "dependencies": {
    "@adonisjs/auth": "^9.4.0",
    "@adonisjs/core": "^6.18.0",
    "@adonisjs/cors": "^2.2.1",
    "@adonisjs/inertia": "^3.1.1",
    "@adonisjs/lucid": "^21.8.2",
    "@adonisjs/session": "^7.5.1",
    "@adonisjs/shield": "^8.2.0",
    "@adonisjs/static": "^1.1.1",
    "@adonisjs/vite": "^4.0.0",
    "@atproto-labs/simple-store": "^0.3.0",
    "@atproto/jwk-jose": "^0.1.11",
    "@atproto/lex": "^0.0.11",
    "@atproto/oauth-client-node": "^0.3.15",
    "@atproto/syntax": "^0.4.2",
    "@atproto/tap": "^0.0.2",
    "@inertiajs/react": "^2.3.4",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tailwindcss/vite": "^4.1.18",
    "@thisismissem/adonisjs-atproto-oauth": "^0.1.0",
    "@thisismissem/adonisjs-atproto-tap": "^1.0.2",
    "@vinejs/vine": "^3.0.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "edge.js": "^6.2.1",
    "lucide-react": "^0.562.0",
    "luxon": "^3.7.2",
    "pg": "^8.16.3",
    "pg-connection-string": "^2.9.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "reflect-metadata": "^0.2.2",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18"
  },
  "hotHook": {
    "boundaries": [
      "./app/controllers/**/*.ts",
      "./app/middleware/*.ts"
    ]
  },
  "prettier": "@adonisjs/prettier-config"
}
